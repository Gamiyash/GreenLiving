  <body>
    <%- include('header') %>
    <main>
      <section class="hero">
        <div class="maintxt">
          <h1>Reduce, Recycle, Re-think</h1>
          <p>Join Us in Creating a Sustainable Future.</p>

          <button class="cta-btn">Learn More</button>
        </div>
      </section>
      <section class="w-full py-12 md:py-24 lg:py-32 bg-muted blog">
        <div class="container px-4 md:px-6">
          <div
            class="flex flex-col items-center justify-center space-y-4 text-center"
          >
            <div class="space-y-2">
              <h2
                class="hd-txt text-3xl font-bold text-[#2f5437] tracking-tighter sm:text-5xl"
              >
                Waste Management
              </h2>
              <p
                class="max-w-[700px] text-muted-foreground md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed"
              >
                Check out our latest blog posts and stay up-to-date with the
                latest news and insights.
              </p>
            </div>
          </div>
          <div
            class="mx-auto grid max-w-5xl grid-cols-1 gap-8 py-12 sm:grid-cols-2 lg:grid-cols-3"
          >
            <% if (blogs && blogs.length> 0) { %> <%
            blogs.forEach(function(blog) { %>
            <div
              class="card group flex flex-col overflow-hidden rounded-lg border bg-background shadow-sm transition-all hover:shadow-md"
            >
              <img
                src="<%= blog.imageUrl %>"
                alt="<%= blog.title %>"
                width="600"
                height="400"
                class="aspect-video w-full object-cover"
              />
              <div class="b-card flex flex-1 flex-col justify-between p-6">
                <div>
                  <h3
                    class="txt title text-xl font-semibold transition-colors group-hover:text-primary"
                  >
                    <%= blog.title %>
                  </h3>
                  <p class="txt mt-3 line-clamp-3 text-muted-foreground">
                    <%= blog.excerpt %>
                  </p>
                </div>
                <a
                  class="btn btn-blog mt-4 inline-flex items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground transition-colors hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50"
                  href="/post/<%= blog._id %>"
                  rel="ugc"
                >
                  Read More
                </a>
              </div>
            </div>
            <% }); %> <% } else { %>
            <p class="col-span-full text-center text-muted-foreground">
              No blogs found.
            </p>
            <% } %>
          </div>
        </div>
      </section>

      <!-- Event section  -->

      <section
        class="events w-full py-12 md:py-24 lg:py-32 bg-muted"
        id="events"
      >
        <div class="container px-4 md:px-6">
          <div
            class="flex flex-col items-center justify-center space-y-4 text-center"
          >
            <div class="space-y-2">
              <h1
                class="hd-txt section-title text-3xl font-bold tracking-tighter sm:text-5xl"
              >
                Upcoming Events
              </h1>
              <p
                class="max-w-[700px] text-muted-foreground md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed"
              >
                Check out our upcoming events and mark your calendars!
              </p>
            </div>
          </div>
          <div
            class="events-container mx-auto grid max-w-5xl grid-cols-1 gap-8 py-12 sm:grid-cols-2 lg:grid-cols-3"
          >
            <% if (events && events.length> 0) { %> <%
            events.forEach(function(event) { %>
            <div
              class="event-card group flex flex-col overflow-hidden rounded-lg border bg-background shadow-sm transition-all hover:shadow-md"
            >
              <div class="event-image">
                <img
                  src="<%= event.mainimg %>"
                  alt="<%= event.title %>"
                  width="600"
                  height="400"
                  class="aspect-video w-full object-cover"
                />
              </div>
              <div
                class="flex flex-1 flex-col justify-between p-6 relative overflow-hidden"
              >
                <div class="smoke-effect"></div>
                <div>
                  <h3
                    class="event-title text-xl font-semibold transition-colors group-hover:text-primary bg-gradient-to-r from-green-400 via-green-500 to-green-600 text-white p-2 rounded-md relative z-10"
                  >
                    <%= event.title %>
                  </h3>
                  <p class="mt-2 text-sm text-muted-foreground relative z-10">
                    <%= event.date %>
                  </p>
                  <p
                    class="event-description mt-3 line-clamp-3 text-muted-foreground relative z-10"
                  >
                    <%= event.des %>
                  </p>
                </div>
