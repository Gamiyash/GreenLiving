            margin-bottom: 10px;
        }

        .cart-item-quantity {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

        .cart-item-quantity input {
            width: 50px;
            text-align: center;
            margin-right: 10px;
            padding: 5px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        button {
            padding: 8px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .update-quantity {
            background-color: #3498db;
            color: white;
        }

        .update-quantity:hover {
