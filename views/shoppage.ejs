<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='icon' type='image/png'
    href='https://firebasestorage.googleapis.com/v0/b/greenlander-c8556.appspot.com/o/logo-icon.png?alt=media&token=7ee18bf1-5432-452b-8c2d-9eb5668bdc8e'
    class="custom-icon">
    <title>Shop</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .shop{
            background-color: #0765158c;
        padding: 6px;
        border-radius: 4px;
        }
        .product {
            padding: 0 40px;
            margin-top: 20px;
        }

        h1 {
            color: #2c3e50;
            margin-bottom: 20px;
        }

        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .product-card {
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            transition: transform 0.3s ease;
        }

        .product-card:hover {
            transform: scale(1.05);
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        }

        .product-card:hover .product-image {
            /* Additional styles for the image on hover */
            opacity: 0.8;
        }

        .product-image {
            width: 100%;
            height: 70%;
            object-fit: cover;
        }

        .product-info {
            padding: 15px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .product-name {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .product-price {
            color: #27ae60;
            font-weight: bold;
        }
        .path{
        display: flex;
        margin-left:100px ;
        background-color: rgba(240, 248, 255, 0.281);
        width: fit-content;
        gap: 3px;
    }
.dark-mode .product-card{
background-color: black;
color: white;
}
.dark-mode {
    background-color: #222;
    color: #e6e6e6;
}

.dark-mode h1 {
    color: #fff;
}
.dark-mode .txt {
    color: #fff;
}

.dark-mode .product-card {
    background-color: #333;
    border: 1px solid #444;
    color: #e6e6e6;
}

.dark-mode .product-card:hover {
    box-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
}

.dark-mode .product-price {
    color: #9acd32; /* Light green */
}

.dark-mode .path {
    background-color: rgba(51, 51, 51, 0.5);
}

.dark-mode .cart-btn {
    background-color: #4d88ff;
    color: #e6e6e6;
}

.dark-mode .cart-btn:hover {
    background-color: #3a78e8;
}
.product-grid{
    margin-top: 30px;
}
    </style>
</head>
<body >
    <%- include('header') %>
    <nav class="text-sm mb-8" aria-label="Breadcrumb">
        <ol class="list-none p-0 inline-flex">
            <li class="flex items-center">
                <a href="/home" class="text-blue-500 hover:text-blue-600">Home</a>
                <svg class="fill-current w-3 h-3 mx-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512"><path d="M285.476 272.971L91.132 467.314c-9.373 9.373-24.569 9.373-33.941 0l-22.667-22.667c-9.357-9.357-9.375-24.522-.04-33.901L188.505 256 34.484 101.255c-9.335-9.379-9.317-24.544.04-33.901l22.667-22.667c9.373-9.373 24.569-9.373 33.941 0L285.475 239.03c9.373 9.372 9.373 24.568.001 33.941z"/></svg>
            </li>
            <li>
                <a href="#" class="text-gray-500" aria-current="page">Shop</a>
            </li>
        </ol>
    </nav>
    <section class="product" id="product">
        <h1
          class="hd-txt text-3xl font-bold tracking-tighter text-center sm:text-5xl"
        >
          Sustainable living
        </h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mt-8">
          <% items.forEach(item => { %>
          <div
            class="rounded-lg shadow-md overflow-hidden border-2 border-white"
          >
            <a
              href="/product/<%= item.id %>"
              class="block hover:no-underline focus:outline-none"
            >
              <img
                src="<%= item.sl_image %>"
                alt="<%= item.sl_title %>"
                class="w-full h-60 object-cover dark:brightness-75"
              />
              <div class="px-4 py-2 flex flex-col justify-between">
                <h3
                  class="txt text-lg font-medium text-gray-900 dark:text-black"
                >
                  <%= item.sl_title %>
                </h3>
                <div class="flex items-center justify-between mt-2">
                  <p class="text-gray-700 dark:text-red-700 text-base">
                    ₹<strike><%= item.slold_price %></strike>
                  </p>
                  <p class="text-gray-700 dark:text-green-700 text-base">
                    ₹<%= item.sl_price %>
                  </p>
                  <button
                    class="addit px-4 py-2 text-sm font-medium text-center text-white rounded-md bg-gradient-to-bl from-green-600 to-green-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                    data-id="<%= item.id %>"
                    data-name="<%= item.sl_title %>"
                    data-price="<%= item.sl_price %>"
                    data-image="<%= item.sl_image %>"
                  >
                    Add to Cart
                  </button>
                </div>
              </div>
            </a>
          </div>
          <% }) %>
        </div>

        <h1
          class="hd-txt text-3xl font-bold tracking-tighter text-center sm:text-5xl mt-20"
        >
          Sustainable fashion
        </h1>
        <div
          class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mt-8 mt-10"
        >
          <% items.forEach(item => { %>
          <div
            class="rounded-lg shadow-md overflow-hidden border-2 border-white"
          >
            <a
              href="/product/Sustainable_Fashion/<%= item.id %>"
              class="block hover:no-underline focus:outline-none"
            >
              <img
                src="<%= item.sf_image %>"
                alt="<%= item.sf_title %>"
                class="w-full h-60 object-cover dark:brightness-75"
              />
              <div class="px-4 py-2 flex flex-col justify-between">
                <h3
                  class="txt text-lg font-medium text-black-900 dark:text-black"
                >
                  <%= item.sf_title %>
                </h3>
                <div class="flex items-center justify-between mt-2">
                  <p class="text-gray-700 dark:text-red-700 text-base">
                    ₹<strike><%= item.sfold_price %></strike>
                  </p>
                  <p class="text-gray-700 dark:text-green-700 text-base">
                    ₹<%= item.sf_price %>
                  </p>
                  <button
                    class="addit px-4 py-2 text-sm font-medium text-center hover:--tw-scale: 1; text-white bg-gradient-to-bl from-green-600 to-green-900 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                    data-id="<%= item.id %>"
                    data-name="<%= item.sf_title %>"
                    data-price="<%= item.sf_price %>"
                    data-image="<%= item.sf_image %>"
                  >
                    Add to Cart
                  </button>
                </div>
              </div>
            </a>
          </div>
          <% }) %>
        </div>
      </section>
    <%- include('footer') %>
    <script>
        function applyDarkModePreference() {
  const isDarkMode = localStorage.getItem('darkMode') === 'true';
  const body = document.body;

  if (isDarkMode) {
    body.classList.add('dark-mode');
  } else {
    body.classList.remove('dark-mode');
  }
}

window.addEventListener('load', applyDarkModePreference);
document.addEventListener("DOMContentLoaded", function () {
        // Retrieve cart from localStorage or initialize it as an empty array
        let cart = JSON.parse(localStorage.getItem("cart")) || [];

        function updateLocalStorage() {
          localStorage.setItem("cart", JSON.stringify(cart));
        }

        document.querySelectorAll(".addit").forEach((button) => {
          button.addEventListener("click", function (event) {
            event.preventDefault();
            const item = {
              id: this.getAttribute("data-id"),
              name: this.getAttribute("data-name"),
              price: this.getAttribute("data-price"),
              image: this.getAttribute("data-image"),
            };
            cart.push(item);
            updateLocalStorage();
            alert("okay");
          });
        });
      });
    </script>
</body>
</html>